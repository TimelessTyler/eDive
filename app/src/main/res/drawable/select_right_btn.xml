<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:height="30dp">
        <shape android:shape="rectangle" >
            <solid android:color="#ff0c8cef" />
            <corners android:topRightRadius="@dimen/dp_4" android:bottomRightRadius="@dimen/dp_4"/>
            <gradient android:type="linear" android:useLevel="true" android:startColor="#ff076bf0" android:endColor="#ff35a6ff" android:angle="0" />

        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#E2EAF5" />
            <corners android:topRightRadius="@dimen/dp_4" android:bottomRightRadius="@dimen/dp_4"/>
        </shape>

    </item>

</selector>