<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="lib_style_text_size2" parent="lib_style_text">
        <item name="android:textSize">@dimen/sp_13</item>
    </style>
    <style name="lib_style_text" parent="lib_style_base">
        <item name="android:textColor">@color/grey_first</item>
    </style>
    <style name="lib_style_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Style_TextViewDialog" parent="Style_TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">16.0sp</item>
    </style>
    <style name="Style_TextView" parent="Style_TextViewDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/text_white_blue</item>
    </style>
    <style name="Style_TextViewDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Button_DialogConfirmNew" parent="Button_DialogDefault">
        <item name="android:background">#00000000</item>
        <item name="android:padding">12dip</item>
        <item name="android:textColor">@color/grey_second</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Button_DialogDefault" parent="ButtonWidth">
        <item name="android:layout_weight">1</item>
    </style>
    <style name="ButtonWidth" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="lable_style">
        <item name="android:background">#33ffffff</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="diving_layoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_13</item>
        <item name="android:paddingBottom">@dimen/dp_25</item>
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/peronal_bg</item>
    </style>

    <style name="diving_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF0066FF</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <style name="Diving_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_100</item>
        <item name="android:background">#FF021F43</item>
        <item name="android:padding">@dimen/dp_9</item>
        <item name="android:maxLength">300</item>
        <item name="android:layout_marginTop">@dimen/dp_12</item>
        <item name="android:textColor">@color/c_ffffff</item>
        <item name="android:textColorHint">@color/hints</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>
</resources>
