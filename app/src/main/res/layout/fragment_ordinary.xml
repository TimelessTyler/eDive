<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/Setting_bg"
    tools:context=".fragment.OrdinaryFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:background="@drawable/shape_ordina"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_bgtb"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/white"
                    android:text="PADI开放水域OW潜水证"
                    />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OW潜水证"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:layout_below="@id/tv_text"
                    android:layout_marginLeft="@dimen/dp_15"
                    />
                <TextView
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更换"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_name"
                    android:textColor="#D7E8FF"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/shape_te"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:alpha="0.2"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                />
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_dd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="潜水地点"
                    />
                <EditText
                    android:id="@+id/et_address"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="@dimen/dp_166"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_dd"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_pice"
                    android:text="菲律宾"
                    android:padding="@dimen/dp_2"
                    android:gravity="center"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_pc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="价格设置"
                    />
                <EditText
                    android:id="@+id/et_pice"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="@dimen/dp_166"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_pc"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_pice"
                    android:text="50000.00"
                    android:padding="@dimen/dp_2"
                    android:gravity="center"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="增值产品"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可添加更多产品价格"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:layout_toRightOf="@id/tv_other"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:text="去添加"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18"
                android:text="课程简介"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                />
            <TextView
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:lineSpacingExtra="@dimen/dp_5"
                android:text="       如果你总是想要尝试水肺潜水课程，体验冒险经历和
看着世界沉浸在茫茫海浪中，这里就是你的第一步。学习PADI OW开放水域潜水员课程，可以去全世界任何一个潜点潜到18米处，去探索神奇的水下世界。"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                />
            <ImageView
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/bg"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>