<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Setting_bg"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.PhotoRentActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <com.example.edives.design.CommonTitle
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:canBack="true"
                app:backImage="@mipmap/icon_back"
                app:titleText="相机租赁"
                />
            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/coach_photo_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_bgtb"
                    android:layout_alignParentRight="true"
                    />
                <LinearLayout
                    android:padding="@dimen/dp_15"
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务名称："
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="@dimen/dp_155"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/white"
                        android:text="相机租赁"
                        android:gravity="center"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_l"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_below="@id/ll"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="相机品牌："
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        />
                    <RelativeLayout
                        android:id="@+id/rl_chose"
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_pice"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_width="@dimen/dp_155"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/white"
                            android:background="@null"
                            android:hint="请选择相机品牌"
                            android:textColorHint="@color/hint"
                            android:padding="@dimen/dp_5"
                            android:gravity="center"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_more_button"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_15"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_below="@id/ll_l"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="相机参数："
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        />
                    <RelativeLayout
                        android:id="@+id/rl_chos"
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_pice"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/white"
                            android:background="@null"
                            android:hint="相机内存等参数"
                            android:textColorHint="@color/hint"
                            android:padding="@dimen/dp_5"
                            android:gravity="top"
                            />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务介绍"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_30"
                />
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务介绍的文字服务介绍的文字服务介绍的文字服务介绍的文字服务介绍的文字服务介绍的文字服务介绍的文字服务介绍的文字服务介绍的文字服务介绍的文字服务介绍的文字服务介绍的文字服务介绍的文字"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_25"
                android:lineSpacingExtra="@dimen/dp_5"
                />
            <ImageView
                android:id="@+id/iv_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/bg"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/bt_ok"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ok"
        android:text="确定"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp_30"
        android:textSize="@dimen/sp_14"
        />
</RelativeLayout>