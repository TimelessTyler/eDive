<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_phone"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_show"
                android:layout_width="@dimen/dp_117"
                android:layout_height="@dimen/dp_87"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/tv_text"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_show"
                android:text="薄荷岛海上一日三千"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_8"
                />
            <TextView
                android:id="@+id/tv_day"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_show"
                android:layout_below="@id/tv_text"
                android:layout_marginTop="@dimen/dp_7"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:text="全程共两天"
                android:alpha="0.7"
                />
            <TextView
                android:id="@+id/tv_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_show"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_alignBottom="@id/iv_show"
                android:layout_marginBottom="@dimen/dp_8"
                android:textColor="@color/white"
                android:alpha="0.5"
                android:textSize="@dimen/sp_12"
                android:text="销量：780"
                />
            <TextView
                android:id="@+id/tv_pice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/tv_sales"
                android:layout_alignBottom="@id/iv_show"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:text="￥4500-￥5000"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:alpha="0.14"
            />
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_preview"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预览"
                android:textColor="@color/white"
                android:background="@drawable/shape_text"
                android:paddingRight="@dimen/dp_14"
                android:paddingLeft="@dimen/dp_14"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_edit"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textColor="@color/white"
                android:background="@drawable/shape_text"
                android:paddingRight="@dimen/dp_14"
                android:paddingLeft="@dimen/dp_14"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_up"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上架"
                android:textColor="@color/white"
                android:background="@drawable/shape_text"
                android:paddingRight="@dimen/dp_14"
                android:paddingLeft="@dimen/dp_14"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_evaluate"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价"
                android:textColor="@color/white"
                android:background="@drawable/shape_text"
                android:paddingRight="@dimen/dp_14"
                android:paddingLeft="@dimen/dp_14"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_share"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textColor="@color/white"
                android:background="@drawable/shape_text"
                android:paddingRight="@dimen/dp_14"
                android:paddingLeft="@dimen/dp_14"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>