<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:background="@drawable/coach_bgs"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_bgtb"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_70"
            />
        <TextView
            android:id="@+id/tv_djs"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/order_tex"
            android:padding="@dimen/dp_2"
            android:text=" 付款倒计时 "
            android:textColor="#BBD9FF"
            android:textSize="@dimen/sp_13"
            />
        <TextView
            android:id="@+id/tv_state"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text=""
            />
        <ImageView
            android:id="@+id/iv_show"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_below="@id/tv_djs"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_show"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_picse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_show"
            android:layout_alignBottom="@id/iv_show"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <RelativeLayout
            android:padding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignBottom="@id/iv_show"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@drawable/coach_bg_co"
            android:layout_height="wrap_content">
            <com.example.edives.design.RoundImage
                android:id="@+id/iv_co_show"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:id="@+id/tv_co_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_co_show"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                />
        </RelativeLayout>
    </RelativeLayout>
    
</RelativeLayout>