<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/Setting_bg"
    tools:context=".activity.RegisterActivity">
    <com.example.edive.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="注册账号"
        app:backImage="@mipmap/icon_back"
        app:canBack="true"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/coach_bg"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_pn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_phnum"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@null"
                android:textColorHint="@color/hints"
                android:hint="请输入新的手机号码"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/iv_pn"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:maxLines="1"
                />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/Setting_bg"
            />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_yanz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_yanzhengm"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/et_code"
                android:layout_width="@dimen/dp_150"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColorHint="@color/hints"
                android:hint="请输入验证码"
                android:textColor="@color/white"
                android:inputType="number"
                android:layout_toRightOf="@id/iv_yanz"
                android:layout_marginLeft="@dimen/dp_11"
                android:textSize="@dimen/sp_14"
                android:maxLines="1"
                android:layout_centerVertical="true"
                />
            <Button
                android:id="@+id/bt_getcode"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_34"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:text="获取验证码"
                android:background="@drawable/findpass_getcode_shape_bg"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/coach_bg"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_color"
                android:text="教练证书"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/hintss"
                android:layout_toRightOf="@id/tv_co"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="仅支持jpg格式"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_ss"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:text="上传照片"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:id="@+id/iv_addphoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_sczp"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_margin="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提醒:提交之后，我们会在3-5个工作日通知您申请结果，
请耐心等待"
        android:textColor="@color/text_color"
        android:lineSpacingExtra="@dimen/dp_5"
        />
    <Button
        android:id="@+id/bt_ok"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/findpass_getcode_shape_bg"
        android:textColor="@color/white"
        android:text="提交审核"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        />
</LinearLayout>