<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/Setting_bg"
    android:layout_height="match_parent"
    tools:context=".activity.DynamicDetailsActivity">
    <com.example.edives.design.CommonTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backImage="@mipmap/icon_back"
        app:canBack="true"
        app:titleText="详情"
        app:moreImg="@mipmap/icon_share"
        />
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_below="@id/title"
        android:layout_above="@id/ll"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_pl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:background="@color/findpassword_bg"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:background="@drawable/search_bg"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_text"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:background="@null"
                android:hint="评论"
                android:textColor="@color/hint"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/sp_13"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>