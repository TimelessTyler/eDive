<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/Setting_bg"
    tools:context=".activity.AcademicEvidenceActivity">
    <com.example.edive.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="学证"
        app:backImage="@mipmap/icon_back"
        app:canBack="true"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                style="@style/diving_layoutStyle">
                <TextView
                    style="@style/diving_textview"
                    android:text="基本信息"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_25"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/dp_22"
                            android:text="证书名称"
                            android:textColor="@color/albumFontLight"
                            android:textSize="@dimen/sp_13" />

                        <RadioButton
                            android:layout_width="@dimen/dp_102"
                            android:layout_height="@dimen/dp_28"
                            android:button="@null"
                            android:gravity="center"
                            android:text="OWD"
                            android:checked="true"
                           android:background="@drawable/certificate_select"
                            android:textColor="@color/c_ffffff"
                            android:textSize="@dimen/sp_13" />

                        <RadioButton
                            android:layout_width="@dimen/dp_102"
                            android:layout_height="@dimen/dp_28"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:text="OW"
                            android:background="@drawable/certificate_select"
                            android:button="@null"
                            android:textColor="@color/c_ffffff"
                            android:textSize="@dimen/sp_13"/>
                    </RadioGroup>

                </RelativeLayout>
                <View
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/hint_oeder"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25">
                    <TextView
                        android:id="@+id/divig_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="潜水地点"
                        android:textColor="@color/albumFontLight"
                        android:textSize="@dimen/sp_13"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/divig_address"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:text="请选择地点"
                        android:textColor="@color/albumFontLight"
                        android:textSize="@dimen/sp_13"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_more"
                        />
                </RelativeLayout>
                <View
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/hint_oeder"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_29"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标题内容"
                        android:textColor="@color/albumFontLight"
                        android:textSize="@dimen/sp_13"
                        />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:text="快来起个吸引人的标题吧..."
                        android:background="@null"
                        android:textColor="@color/albumFontLight"
                        android:textSize="@dimen/dp_13"
                        />
                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/hint_oeder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_29"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格"
                        android:textColor="@color/albumFontLight"
                        android:textSize="@dimen/sp_13"
                        />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:text="        请输入学证价格"
                        android:background="@null"
                        android:textColor="@color/albumFontLight"
                        android:textSize="@dimen/dp_13"
                        />
                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/hint_oeder" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_29"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时间"
                        android:textColor="@color/albumFontLight"
                        android:textSize="@dimen/sp_13"
                        />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:text="        请输入时间，例：3天2晚"
                        android:background="@null"
                        android:textColor="@color/albumFontLight"
                        android:textSize="@dimen/dp_13"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                style="@style/diving_layoutStyle">
                <TextView
                    style="@style/diving_textview"
                    android:text="时间信息"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_25">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="是否有时间限制"
                        android:textColor="@color/c_ffffff"
                        android:textSize="@dimen/sp_13" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_22"
                            android:layout_weight="1"
                            android:button="@null"
                            android:gravity="center"
                            android:background="@drawable/select_left_btn"
                            android:checked="true"
                            android:text="是"
                            android:textColor="@drawable/font_select"
                            android:textSize="@dimen/sp_13" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_22"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="否"
                            android:background="@drawable/select_right_btn"
                            android:button="@null"
                            android:textColor="@drawable/font_select"
                            android:textSize="@dimen/sp_13"/>
                    </RadioGroup>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">
                    <TextView
                        android:id="@+id/tv_StartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起止时间"
                        android:layout_centerVertical="true"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_toRightOf="@+id/tv_StartTime"
                        android:textColor="@color/c_ffffff"
                        android:background="@drawable/shape_gradual"
                        android:text="2019-10-20 14:20"
                        android:textSize="@dimen/sp_12">
                    </TextView>
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:textColor="@color/c_ffffff"
                        android:text="时间选择 ▼"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_12"
                        android:background="@drawable/shape_gradual">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25">
                    <TextView
                        android:id="@+id/most_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最大人数"
                        android:textColor="@color/albumFontLight"
                        android:textSize="@dimen/sp_13"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/most_people"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:text="不限"
                        android:textColor="@color/albumFontLight"
                        android:textSize="@dimen/sp_13"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_more"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/diving_layoutStyle">
                <TextView
                    style="@style/diving_textview"
                    android:text="相关图片"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_25"
                    android:text="上传图片（只支持jpg格式)"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_13" />

                <RelativeLayout
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65">
                    <TextView
                        android:id="@+id/tv_ss"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/dp_45"
                        android:layout_height="wrap_content"
                        android:text="上传照片"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        />
                    <ImageView
                        android:id="@+id/iv_addphoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_sczp"
                        />
                </RelativeLayout>
                <!--            <android.support.v7.widget.RecyclerView-->
                <!--                android:id="@+id/rec"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"/>-->

            </LinearLayout>
            <LinearLayout
                style="@style/diving_layoutStyle">
                <TextView
                    style="@style/diving_textview"
                    android:text="费用信息"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="费用包含"
                    android:layout_marginTop="@dimen/dp_12"
                    android:textColor="@color/albumFontLight"
                    android:textSize="@dimen/sp_14"/>

                <EditText
                    style="@style/Diving_edittext"
                    android:hint="建议填写内容用序号来表示..."
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="费用不含"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/sp_14"/>

                <EditText
                    style="@style/Diving_edittext"
                    android:hint="建议填写内容用序号来表示..."
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/diving_layoutStyle">
                <TextView
                    style="@style/diving_textview"
                    android:text="报名须知"
                    android:layout_marginBottom="@dimen/dp_16"/>
                <EditText
                    style="@style/Diving_edittext"
                    android:hint="请输入报名须知"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/diving_layoutStyle">
                <TextView
                    style="@style/diving_textview"
                    android:text="潜点介绍"
                    android:layout_marginBottom="@dimen/dp_16"/>
                <EditText
                    style="@style/Diving_edittext"
                    android:hint="请输入潜点介绍"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/diving_layoutStyle">
                <TextView
                    style="@style/diving_textview"
                    android:text="行程安排"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="第一天"
                        android:textColor="@color/c_ffffff"
                        android:textSize="@dimen/sp_14"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jc_back_tiny_pressed"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <EditText
                    style="@style/Diving_edittext"
                    android:hint="请输入行程安排"
                    />
<!--                <ListView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"/>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="第二天"
                        android:textColor="@color/c_ffffff"
                        android:textSize="@dimen/sp_14"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jc_back_tiny_pressed"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <EditText
                    style="@style/Diving_edittext"
                    android:hint="请输入行程安排"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/btn_add"
                    android:text="＋"
                    android:gravity="center"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/c_ffffff">

                </Button>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/btn_publish"
                android:text="发布"
                android:textSize="@dimen/sp_19"
                android:textColor="@color/c_ffffff">

            </Button>
        </LinearLayout>

    </ScrollView>
</LinearLayout>