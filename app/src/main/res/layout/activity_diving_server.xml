<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/Setting_bg"
    android:layout_height="match_parent"
    tools:context=".activity.DivingServerActivity">
    <com.example.edives.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:backImage="@mipmap/icon_back"
        app:titleText="潜水服务"
        />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/shape_yushe"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:text="系统预设服务"
            android:layout_toRightOf="@id/iv"
            android:layout_marginLeft="@dimen/dp_5"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_photo_server"
        android:background="@drawable/shape_selecy"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100">
            <TextView
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_server"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:textColor="#008080"
                android:textSize="@dimen/sp_10"
                android:text="已添加"
                />
            <ImageView
                android:id="@+id/iv_show"
                android:layout_width="@dimen/dp_31"
                android:layout_height="@dimen/dp_26"
                android:src="@mipmap/icon_pzfw"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_27"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_show"
                android:text="拍照服务"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_photo_rent"
            android:layout_marginLeft="@dimen/dp_22"
            android:background="@drawable/shape_phone"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100">
            <TextView
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_server"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:textColor="#008080"
                android:textSize="@dimen/sp_10"
                android:text="未添加"
                />
            <ImageView
                android:id="@+id/iv_shows"
                android:layout_width="@dimen/dp_31"
                android:layout_height="@dimen/dp_26"
                android:src="@mipmap/icon_xjzl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_27"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_shows"
                android:text="相机租赁"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_s"
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/shape_yushe"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:text="自定义服务"
            android:layout_toRightOf="@id/iv_s"
            android:layout_marginLeft="@dimen/dp_5"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/shape_phone"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100">
        <TextView
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="该功能暂未开放，敬请期待..."
            android:layout_marginTop="@dimen/dp_10"
            android:lineSpacingExtra="@dimen/dp_5"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:alpha="0.5"
            />
    </RelativeLayout>
</LinearLayout>